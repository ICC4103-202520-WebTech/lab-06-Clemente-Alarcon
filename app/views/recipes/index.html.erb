<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="mb-0">Recipes</h1>
  <%= link_to "New Recipe", new_recipe_path, class: "btn btn-success" %>
</div>

<table class="table table-hover align-middle">
  <thead>
    <tr>
      <th>Title</th>
      <th>Cook time</th>
      <th>Difficulty</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.title %></td>
        <td><%= recipe.cook_time %> min</td>
        <td><%= recipe.difficulty %></td>
        <td class="text-end">
          <%= link_to "Show", recipe, class: "btn btn-sm btn-primary" %>
          <%= link_to "Edit", edit_recipe_path(recipe), class: "btn btn-sm btn-secondary" %>
          <%= link_to "Delete", recipe, data: { turbo_method: :delete, turbo_confirm: "Delete this recipe?" }, class: "btn btn-sm btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
