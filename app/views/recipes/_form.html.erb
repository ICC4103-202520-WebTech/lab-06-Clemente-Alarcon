<%= form_with(model: recipe, class: "card p-4 shadow-sm") do |form| %>
  <% if recipe.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(recipe.errors.count, "error") %> prohibited this recipe from being saved:</h4>
      <ul class="mb-0">
        <% recipe.errors.full_messages.each do |m| %><li><%= m %></li><% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :cook_time, "Cook time (min)", class: "form-label" %>
    <%= form.number_field :cook_time, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :difficulty, class: "form-label" %>
    <%= form.select :difficulty, ["Easy", "Medium", "Hard"], {}, class: "form-select" %>
  </div>

  <div class="mb-3">
    <%= form.label :instructions, "Instructions", class: "form-label", for: nil %>
    <%= form.rich_text_area :instructions, class: "form-control" %>
  </div>

  <div class="d-flex gap-2">
    <%= form.submit class: "btn btn-primary" %>
    <%= link_to "Cancel", recipes_path, class: "btn btn-outline-secondary" %>
  </div>
<% end %>
